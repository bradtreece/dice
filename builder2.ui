	            <child>
                <object id="result" class="GtkLabel">
		            <property name="visible">True</property>
		            <property name="label"> -- </property>
		        </object>
		        </child>
            </object>
	        </child>
            ##########   HBOX 3   ###########
            <child>
	        <object id="hbox_lvl2_b" class="GtkHBox">
                <property name="visible">True</property>
                ########## Quit Button ##########
	            <child>
	            <object id="quit" class="GtkButton">
		            <property name="visible">True</property>
	            </object>
	            </child>
	        </object>
	        </child>
        </object>
        </child>
    </object>
</interface>
