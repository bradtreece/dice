        <property name="default-width">500</property>
        <property name="default-height">800</property>
        <property name="border-width">10</property>
        <child>
        <object id="background_box" class="GtkVBox">
            <property name="visible">True</property>
            ##########   HBOX 1   ###########
            <child>
            <object id="hbox1" class="GtkHBox">
                <property name="visible">True</property>
    	        <child>
	            <object id="roller_box" class="GtkBox">
                    <property name="visible">True</property>
                </object>
                </child>
    	        <child>
	            <object id="roller_box2" class="GtkBox">
